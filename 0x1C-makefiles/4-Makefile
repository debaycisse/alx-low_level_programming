CC := gcc
SRC := $(wildcard *.c)
OBJ := $(wildcard *.o)
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

all: school.o main.o sch_exec

school.o: school.c
	${CC} ${CFLAGS}  -c -o $@ $<

main.o: main.c
	${CC} $(CFLAGS) -c -o $@ $<

sch_exec: school.o main.o 
	${CC} $< main.o -o $(NAME)

clean:
	${RM} *~ $(NAME)

oclean:
	${RM} main.o school.o

fclean: clean oclean

re: oclean all
